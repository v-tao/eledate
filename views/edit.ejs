<%- include("../partials/header") %>
<form action="/profiles/<%=profile._id%>?_method=PUT" method="POST">
    <label for="name">Name</label>
    <input required type="text" name="name" value="<%=profile.name%>">
    <label for="age">Age</label>
    <input required type="number" min="0" name="age" value="<%=profile.age%>">
    <label for="video">Video Embed URL</label>
    <input required type="text" name="video" value="<%=profile.video%>">
    <label for="description">Description</label>
    <textarea required name="description"><%=profile.description%></textarea>
    <input type=submit>
</form>
<%- include("../partials/footer") %>
